{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "out",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "skipLibCheck": true
  },
  "include": ["src", "*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
